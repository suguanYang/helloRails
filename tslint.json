{
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "double"
    ],
    "interface-over-type-literal": false,
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": true,
    "class-name": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": true,
    "no-unexternalized-strings": [
      true,
      {
        "signatures": [
          "localize",
          "nls.localize"
        ],
        "keyIndex": 0,
        "messageIndex": 1
      }
    ],
    "layering": [
      true,
      {
        "common": [],
        "node": [
          "common"
        ],
        "browser": [
          "common"
        ]
      }
    ],
    "duplicate-imports": true,
    "no-new-buffer": true,
    "translation-remind": true,
    "no-standalone-editor": true
  },
  "rulesDirectory": []
}